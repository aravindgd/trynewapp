source 'https://rubygems.org'
ruby "1.9.3"
gem 'rails'

group :development do
  gem 'sqlite3'
  gem 'rspec-rails'
end

group :test do
  gem 'capybara'
end
# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'   
  gem 'coffee-rails' 

  gem 'uglifier'
end

gem 'jquery-rails' 
gem 'turbolinks'

group :production do
  gem 'pg'
end
